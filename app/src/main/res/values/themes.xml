<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Iliass" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4CAF50</item>
        <item name="colorSecondaryVariant">#388E3C</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnBackground">#212121</item>
        <item name="colorOnSurface">#212121</item>
    </style>

    <style name="Theme.Iliass" parent="Base.Theme.Iliass" />

    <!-- Theme with ActionBar for flashcard activities -->
    <style name="Theme.Iliass.WithActionBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#4CAF50</item>
        <item name="android:colorBackground">#F5F5F5</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <!-- Fullscreen theme -->
    <style name="Theme.Iliass.NoActionBar.Fullscreen" parent="Theme.Iliass">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>