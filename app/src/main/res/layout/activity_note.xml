<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".NoteActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4CAF50"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ Note"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="16dp"/>

            <Button
                android:id="@+id/boldButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#455A64"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"
                android:padding="0dp"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/italicButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="I"
                android:textSize="16sp"
                android:textStyle="italic"
                android:backgroundTint="#455A64"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"
                android:padding="0dp"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/underlineButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="U"
                android:textSize="16sp"
                android:backgroundTint="#455A64"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"
                android:padding="0dp"
                android:layout_marginStart="4dp"/>

            <Button
                android:id="@+id/colorTextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸŽ¨"
                android:textSize="18sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                style="?android:attr/borderlessButtonStyle"
                android:padding="0dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Title Section with Divider -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/titleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="10sp"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:padding="12dp"
                android:paddingBottom="4dp"/>

            <EditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Enter note title"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:textColor="#212121"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColorHint="#CCCCCC"
                android:maxLines="2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#4CAF50"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/contentSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleCard"
        app:layout_constraintBottom_toTopOf="@id/statusText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTENT"
            android:textSize="10sp"
            android:textColor="#999999"
            android:letterSpacing="0.1"
            android:padding="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/contentInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="Write your note here..."
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="#424242"
            android:textSize="16sp"
            android:textColorHint="#CCCCCC"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New note"
        android:padding="12dp"
        android:textColor="#666666"
        android:textSize="12sp"
        android:textAlignment="center"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¾ Save"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:padding="10dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/exportButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¤ Export"
            android:textColor="@android:color/white"
            android:backgroundTint="#9C27B0"
            android:padding="10dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:enabled="false"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ—‘ï¸ Delete"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336"
            android:padding="10dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:enabled="false"/>

        <Button
            android:id="@+id/viewNotesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“‹ All Notes"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:padding="10dp"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>