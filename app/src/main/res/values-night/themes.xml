<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Modern Premium Dark -->
    <style name="Base.Theme.Iliass" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#A29BFE</item>
        <item name="colorPrimaryVariant">#6C5CE7</item>
        <item name="colorOnPrimary">#0D1117</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#55EFC4</item>
        <item name="colorSecondaryVariant">#00CEC9</item>
        <item name="colorOnSecondary">#0D1117</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#0D1117</item>
        <item name="colorSurface">#161B22</item>
        <item name="colorOnBackground">#E6EDF3</item>
        <item name="colorOnSurface">#E6EDF3</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#0D1117</item>
        <item name="android:navigationBarColor">#0D1117</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Theme with ActionBar for flashcard activities -->
    <style name="Theme.Iliass.WithActionBar" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#A29BFE</item>
        <item name="colorPrimaryVariant">#6C5CE7</item>
        <item name="colorOnPrimary">#0D1117</item>
        <item name="colorSecondary">#55EFC4</item>
        <item name="android:colorBackground">#0D1117</item>
        <item name="colorSurface">#161B22</item>
        <item name="colorOnSurface">#E6EDF3</item>
    </style>
</resources>
